<div class="container-fluid">
    <div class="row">
        <div class="col mt-5">
            <button class="btn btn-info float-right" data-toggle="modal" data-target="#addUser"><i class="fa fa-plus mr-2"></i>ADD USUÁRIO</button>
            <div class="table-responsive mt-5">
                <table id="users" class="table table-bordered users text-center display nowrap" style="width: 100%;">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Username</th>
                        <th>E-mail</th>
                        <th>Adicionado Em</th>
                        <th>Opções</th>
                    </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td>{{created_at}}</td>
                                <td>
                                    <button class="btn btn-danger del" data-id="{{id}}" title="Delete"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addUser" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> ADD USER </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/users" id="createUser">
                    <div class="form-group">
                        <label>NOME:</label>
                        <input type="text" name="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="username" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>E-mail:</label>
                        <input type="email" name="email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control"/>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">ADD</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('#users').DataTable({
        "responsive": true,
        "scrollY": "500px",
        "scrollCollapse": true
    });
</script>