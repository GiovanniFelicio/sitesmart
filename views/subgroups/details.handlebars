<div class="container-fluid">
      <div id="chart_div" class="chart"></div>
  <div class="row fadedTest">
    <div class="col-lg-12">
    </div>
  </div>
</div>
<script type="text/javascript">
    $.getJSON("/questionnaries/subgroups/getdetails/{{idqnr}}/{{idsub}}", (dato)=>{
      let datos = dato;
      google.charts.load("visualization", "1", {packages:['corechart']});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable(results());
        var view = new google.visualization.DataView(data);
        view.setColumns([0, 1,
                        { calc: "stringify",
                          sourceColumn: 1,
                          type: "string",
                          role: "annotation" },
                        2]);

        var options = {
          title: "Perguntas - NÃºmero de acertos",
          width: '100%',
          height: 'auto',
          bar: {groupWidth: "60%"},
          legend: { position: "none" },
          vAxis: { 
              title: "Sub Grupos", 
              viewWindow:{
                max:100,
                min:0
              },
              minValue:0
            }
        };
        var chart = new google.visualization.ColumnChart(document.getElementById("chart_div"));
        chart.draw(view, options);
        function results(){
          var aux = [["Element", "Density", { role: "style" } ]];
          for(let i = 0; i < datos.length; i++){
            aux.push([datos[i].question, datos[i].percentage,'strstrokeoke-color: #0077b6; stroke-opacity: 0.8; stroke-width: 4; fill-color: #0077b6; fill-opacity: 0.5']);
          }
          return aux;
        }
      }
      $(window).resize(function(){
        drawChart();
      });
    });
</script>