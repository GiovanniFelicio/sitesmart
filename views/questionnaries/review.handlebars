 <br><br>
 {{#if groups }}
    {{#each groups }}
        <div class="row">
            <div class="col-12">
                <div class="card bg-light mb-3" style="max-width: 100%;">
                    <div class="card-header text-center bg-info text-white"><h2><b>{{name}}</b></h2></div>
                    <div class="card-body">
                        <div class="card-text">
{{#each questions as |quest key|}}
    <div class="row">
        <div class="col-12">
            <div class="card bg-light mb-3" style="max-width: 100%;">
                <div class="card-header">
                    {{math key '+' 1}}) {{quest.question}}
                    <div class="float-right row align-items-center mr-1">
                        <div id="divButtonSave{{quest.id}}">
                            {{#compare quest.answer '!=' null}}
                                <i class="fa fa-check text-success mr-2"></i>
                            {{else}}
                                <i class="fa fa-ban text-danger mr-2"></i>
                            {{/compare}}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        {{#each model as |m keymodel|}}
                            <div class="custom-control custom-radio">
                                {{#compare quest.answer '==' m.id}}
                                    <input checked type="radio" class="custom-control-input">
                                {{else}}
                                    <input type="radio" class="custom-control-input">
                                {{/compare}}
                                <label class="custom-control-label mb-2">{{m.model}}</label>
                            </div>
                        {{/each}}
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}
