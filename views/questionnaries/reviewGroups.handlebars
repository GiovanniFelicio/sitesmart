 <div class="col-md-12 col-sm-12">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-secondary" href="/home">Home</a></li>
            <li class="breadcrumb-item" aria-current="page"><a class="text-secondary" href="/questionnaries">Question√°rio</a></li>
            <li class="breadcrumb-item" aria-current="page"><a class="text-primary">{{nameQnr}}</a></li>
        </ol>
    </nav>
</div>
<hr>
<div class="container-fluid">
    <h2 class="text-center font-weight-bold text-uppercase text-info">{{nameQnr}}</h2>
    <hr>
    <div class="row">
        <div class="col">
            {{#if groups }}
                <div class="row">
                    {{#each groups as |gp|}}
                        <div class="col-4">
                            <div class="card bg-light mb-3" style="max-width: 100%;">
                                <div class="card-header text-center bg-info"><h2 class="text-white"><b>{{gp.name}}</b></h2></div>
                                <div class="card-body">
                                    <div class="card-text">
                                        <div class="list-group">
                                            {{#each subgroups as |sub key|}}
                                                {{#compare sub.status '==' 0}}
                                                    <a href="/questionnaries/reply/question/{{../../reference}}/{{sub.id}}" class="myBg-danger list-group-item mb-1">{{sub.name}}<i class="fa fa-arrow-right float-right"></i></a>
                                                {{else compare sub.status '==' 1}}
                                                    <a href="/questionnaries/reply/question/{{../../reference}}/{{sub.id}}" class="myBg-warning list-group-item mb-1">{{sub.name}}<i class="fa fa-arrow-right float-right"></i></a>
                                                {{else compare sub.status '==' 2}}
                                                    <a href="/questionnaries/reply/question/{{../../reference}}/{{sub.id}}" class="myBg-success list-group-item mb-1">{{sub.name}}<i class="fa fa-arrow-right float-right"></i></a>
                                                {{else}}
                                                    <a href="/questionnaries/reply/question/{{../../reference}}/{{sub.id}}" class="list-group-item mb-1">{{sub.name}}<i class="fa fa-arrow-right float-right"></i></a>
                                                {{/compare}}
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="align-items-center text-center">
                    <button type="button" id="saveAll" class="btn btn-light text-primary font-weight-bold col-lg-4">Finalizar</button>
                    <div id="divButtonSave"></div>
                </div>
            {{/if}}
        </div>
    </div>
</div>