 <br><br>
 {{#if groups }}
    {{#each groups }}
        <div class="row">
            <div class="col-12">
                <div class="card bg-light mb-3" style="max-width: 100%;">
                    <div class="card-header">{{name}}</div>
                    <div class="card-body">
                        <div class="card-text">
{{#each subgroups}}
    <div class="row">
        <div class="col-12">
            <div class="card bg-light mb-3" style="max-width: 100%;">
                <div class="card-header"><b>{{name}}</b></div>
                <div class="card-body">
                    <div class="card-text">
                        {{#each questions as |quest key|}}
                            <div class="row">
                                <div class="col-12">
                                    <div class="card bg-light mb-3" style="max-width: 100%;">
                                        <div class="card-header">{{key}}) {{quest.question}}</div>
                                        <div class="card-body">
                                            <div class="card-text">
                                                {{#compare type '==' 2}}
                                                    {{#each model as |m keymodel|}}
                                                        <div class="custom-control custom-radio">
                                                            {{#compare quest.answer '==' 1}}
                                                                <input checked type="radio" class="custom-control-input" id="answer{{key}}{{keymodel}}" name="answer{{key}}" value="{{m.value}}">
                                                            {{else}}
                                                                <input onchange="active('{{key}}')" type="radio" class="custom-control-input" id="answer{{key}}{{keymodel}}" name="answer{{key}}" value="{{m.alue}}">
                                                            {{/compare}}
                                                            <label class="custom-control-label" for="answer{{key}}{{keymodel}}">{{m.model}}</label>
                                                        </div>
                                                    {{/each}}
                                                {{/compare}}
                                                <br>
                                                <div class="float-right row align-items-center mr-1">
                                                    <div id="divButtonSave">
                                                        {{#compare quest.answer '!=' 0}}
                                                            <i class="fa fa-check text-success mr-2"></i>
                                                        {{else}}
                                                            <i class="fa fa-ban text-danger mr-2"></i>
                                                        {{/compare}}
                                                    </div>
                                                    <button disabled type="button" data-id="{{id}}" id="button{{key}}" data-answer="answer{{key}}" class="btn btn-secondary saveQuestion">Save Answer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}